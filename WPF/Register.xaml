<Window x:Class="WPF.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Register Adopter" Height="1000" Width="700"
        Background="#F5F5F5">
    <StackPanel 
        Orientation="Vertical" 
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Margin="40">

        <!-- Header -->
        <StackPanel 
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,0,0,40">
            <TextBlock
                Text="❤️"
                FontSize="48"
                Margin="0,0,15,0"
                VerticalAlignment="Center"/>
            <StackPanel Orientation="Vertical">
                <Label 
                    Content="Adopter Registration" 
                    FontSize="32" 
                    FontWeight="Bold" 
                    Foreground="#2C3E50"
                    Padding="0"
                    Margin="0,0,0,5"/>
                <Label
                    Content="Join our community of cat lovers"
                    FontSize="14"
                    Foreground="#7F8C8D"
                    Padding="0"
                    Margin="0"/>
            </StackPanel>
        </StackPanel>

        <!-- Form Card -->
        <Border
            Background="White"
            CornerRadius="15"
            Padding="40,35"
            HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect 
                    Color="#CCCCCC" 
                    Direction="270" 
                    ShadowDepth="5" 
                    BlurRadius="15" 
                    Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">

                <!-- Sezione Informazioni Personali -->
                <Label
                    Content="Personal Information"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    Padding="0"
                    Margin="0,0,0,20"/>

                <!-- Nome e Cognome affiancati -->
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,0,0,20">
                    <!-- Nome -->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,0,15,0">
                        <Label
                            Content="Name"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White">
                            <TextBox
                                x:Name="txtName"
                                FontSize="16"
                                Padding="12,10"
                                BorderThickness="0"
                                Width="240"/>
                        </Border>
                    </StackPanel>

                    <!-- Cognome -->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="15,0,0,0">
                        <Label
                            Content="Surname"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White">
                            <TextBox
                                x:Name="txtSurname"
                                FontSize="16"
                                Padding="12,10"
                                BorderThickness="0"
                                Width="240"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- TIN -->
                <StackPanel
                    Orientation="Vertical"
                    Margin="0,0,0,20">
                    <Label
                        Content="Tax Identification Number (TIN)"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#2C3E50"
                        Padding="0"
                        Margin="0,0,0,8"/>
                    <Border
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"
                        CornerRadius="5"
                        Background="White">
                        <TextBox
                            x:Name="txtTIN"
                            FontSize="16"
                            Padding="12,10"
                            BorderThickness="0"
                            Width="510"/>
                    </Border>
                </StackPanel>

                <!-- Sezione Contatti -->
                <Label
                    Content="Contact Information"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    Padding="0"
                    Margin="0,10,0,20"/>

                <!-- Telefono ed Email affiancati -->
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,0,0,20">
                    <!-- Telefono -->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,0,15,0">
                        <Label
                            Content="Phone Number"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White">
                            <TextBox
                                x:Name="txtPhone"
                                FontSize="16"
                                Padding="12,10"
                                BorderThickness="0"
                                Width="240"/>
                        </Border>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="15,0,0,0">
                        <Label
                            Content="Email"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White">
                            <TextBox
                                x:Name="txtEmail"
                                FontSize="16"
                                Padding="12,10"
                                BorderThickness="0"
                                Width="240"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Sezione Indirizzo -->
                <Label
                    Content="Address"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    Padding="0"
                    Margin="0,10,0,20"/>

                <!-- Città e CAP -->
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,0,0,20">
                    <!-- Città -->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,0,15,0">
                        <Label
                            Content="City"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White">
                            <TextBox
                                x:Name="txtAdressCity"
                                FontSize="16"
                                Padding="12,10"
                                BorderThickness="0"
                                Width="240"/>
                        </Border>
                    </StackPanel>

                    <!-- CAP -->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="15,0,0,0">
                        <Label
                            Content="Postal Code"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White">
                            <TextBox
                                x:Name="txtAdressPostalCode"
                                FontSize="16"
                                Padding="12,10"
                                BorderThickness="0"
                                Width="240"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Via e Numero Civico -->
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,0,0,25">
                    <!-- Via -->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,0,15,0">
                        <Label
                            Content="Street"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White">
                            <TextBox
                                x:Name="txtAdressStreet"
                                FontSize="16"
                                Padding="12,10"
                                BorderThickness="0"
                                Width="240"/>
                        </Border>
                    </StackPanel>

                    <!-- Numero Civico -->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="15,0,0,0">
                        <Label
                            Content="Civic Number"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White">
                            <TextBox
                                x:Name="txtAdressCivicNumber"
                                FontSize="16"
                                Padding="12,10"
                                BorderThickness="0"
                                Width="240"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Bottone Register -->
                <Button
                    x:Name="btnRegister"
                    Content="Register"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Width="200"
                    Height="50"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0"
                    Background="#27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnRegister_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect 
                            Color="#27AE60" 
                            Direction="270" 
                            ShadowDepth="2" 
                            BlurRadius="8" 
                            Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>