<Window x:Class="WPF.FailedAdoption"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="FailedAdoption" Height="200" Width="500">
    <StackPanel Orientation="Vertical">
        <Label
            Content="Fail adoption"
            FontWeight="Bold"
            FontSize="25"
            HorizontalAlignment="Center"
            Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox
                Text="Search by name or ID"
                Width="150"
                Height="25"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Margin="10"
                x:Name="txtSearchCat"
                GotFocus="RemoveTextCat"/>
            <ComboBox
                x:Name="cbCats"
                Width="200"
                Height="32"
                Margin="10">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text=" (" Foreground="Gray"/>
                            <TextBlock Text="{Binding Id}" Foreground="Gray"/>
                            <TextBlock Text=")" Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button
                x:Name="btnFailAdoptCat"
                Content="Fail"
                Width="150"
                Height="30"
                Margin="10"
                HorizontalAlignment="Center"
                Click="btnFailAdoptCat_Click"
                Background="PaleGreen">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button
                x:Name="btnReturn"
                Content="Return"
                Width="150"
                Height="30"
                Margin="10"
                HorizontalAlignment="Center"
                Click="btnReturn_Click"
                Background="LightCoral">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
        
    </StackPanel>
</Window>
