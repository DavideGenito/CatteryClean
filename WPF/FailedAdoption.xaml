<Window x:Class="WPF.FailedAdoption"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="FailedAdoption" Height="350" Width="500">
    <StackPanel 
        Orientation="Vertical"
        VerticalAlignment="Center"
        Margin="20">

        <!-- Header -->
        <StackPanel 
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,0,0,40">
            <TextBlock
                Text="😿"
                FontSize="48"
                Margin="0,0,15,0"
                VerticalAlignment="Center"/>
            <StackPanel Orientation="Vertical">
                <Label 
                    Content="Failed adoption" 
                    FontSize="32" 
                    FontWeight="Bold" 
                    Foreground="#2C3E50"
                    Padding="0"
                    Margin="0,0,0,5"/>
                <Label
                    Content="Choose the cat below"
                    FontSize="14"
                    Foreground="#7F8C8D"
                    Padding="0"
                    Margin="0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Border
                BorderBrush="#BDC3C7"
                BorderThickness="1"
                CornerRadius="5"
                Background="White"
                Margin="10, 0">
                <TextBox
                    Margin="0.7"
                    Text="Search by name or ID"
                    FontSize="16"
                    Padding="12,10"
                    BorderThickness="0"
                    Width="200"
                    x:Name="txtSearchCat"
                    GotFocus="RemoveTextCat"/>
            </Border>
            <Border
                BorderBrush="#BDC3C7"
                BorderThickness="1"
                CornerRadius="5"
                Background="LightGray"
                Width="200">
                <ComboBox
                    x:Name="cbCats"
                    FontSize="16"
                    Padding="12,10"
                    BorderThickness="0"
                    Background="Transparent"
                    Width="200">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock 
                                    Text="{Binding Name}" 
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    Foreground="#2C3E50"/>
                                <TextBlock 
                                    Text=" (" 
                                    Foreground="#7F8C8D"
                                    FontSize="14"
                                    Margin="3,0,0,0"/>
                                <TextBlock 
                                    Text="{Binding Id}" 
                                    Foreground="#7F8C8D"
                                    FontSize="14"/>
                                <TextBlock 
                                    Text=")" 
                                    Foreground="#7F8C8D"
                                    FontSize="14"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Border>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button
                x:Name="btnFailAdoptCat"
                FontWeight="SemiBold"
                Content="Fail"
                FontSize="15"
                Width="150"
                Height="35"
                Margin="10"
                HorizontalAlignment="Center"
                Click="btnFailAdoptCat_Click"
                Background="#27AE60"
                Foreground="White"
                Cursor="Hand"
                BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect 
                        Color="#27AE60" 
                        Direction="270" 
                        ShadowDepth="2" 
                        BlurRadius="8" 
                        Opacity="0.3"/>
                </Button.Effect>
            </Button>
            <Button
                x:Name="btnReturn"
                Content="Return"
                FontSize="15"
                FontWeight="SemiBold"
                Width="150"
                Height="35"
                Margin="10"
                HorizontalAlignment="Center"
                Click="btnReturn_Click"
                Background="#E74C3C"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect 
                        Color="#27AE60" 
                        Direction="270" 
                        ShadowDepth="2" 
                        BlurRadius="8" 
                        Opacity="0.3"/>
                </Button.Effect>
            </Button>
        </StackPanel>
        
    </StackPanel>
</Window>
