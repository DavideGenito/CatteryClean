<Window x:Class="WPF.Adopt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Adopt Cat" Height="800" Width="750"
        Background="#F5F5F5">
    <StackPanel 
        Orientation="Vertical"
        VerticalAlignment="Center"
        Margin="40">

        <!-- Header -->
        <StackPanel 
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,0,0,40">
            <TextBlock
                Text="❤️"
                FontSize="48"
                Margin="0,0,15,0"
                VerticalAlignment="Center"/>
            <StackPanel Orientation="Vertical">
                <Label 
                    Content="Adopt a Cat" 
                    FontSize="32" 
                    FontWeight="Bold" 
                    Foreground="#2C3E50"
                    Padding="0"
                    Margin="0,0,0,5"/>
                <Label
                    Content="Find a perfect match for a loving home"
                    FontSize="14"
                    Foreground="#7F8C8D"
                    Padding="0"
                    Margin="0"/>
            </StackPanel>
        </StackPanel>

        <!-- Form Card -->
        <Border
            Background="White"
            CornerRadius="15"
            Padding="40,35"
            HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect 
                    Color="#CCCCCC" 
                    Direction="270" 
                    ShadowDepth="5" 
                    BlurRadius="15" 
                    Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">

                <!-- Sezione Select Cat -->
                <Label
                    Content="Select Cat"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    Padding="0"
                    Margin="0,0,0,20"/>

                <!-- Search Cat e ComboBox -->
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,0,0,30">

                    <!-- Search Box Cat -->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,0,20,0">
                        <Label
                            Content="Search"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White">
                            <StackPanel Orientation="Horizontal">
                                <Label
                                    Content="🔍"
                                    FontSize="16"
                                    Margin="12,0,8,0"
                                    VerticalAlignment="Center"
                                    Foreground="#7F8C8D"/>
                                <TextBox
                                    Text="Search by name or ID"
                                    FontSize="16"
                                    Padding="5,10"
                                    BorderThickness="0"
                                    Width="200"
                                    VerticalAlignment="Center"
                                    x:Name="txtSearchCat"
                                    GotFocus="RemoveTextCat"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- ComboBox Cat -->
                    <StackPanel Orientation="Vertical">
                        <Label
                            Content="Available Cats"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White"
                            Width="280">
                            <ComboBox
                                x:Name="cbCats"
                                FontSize="16"
                                Padding="12,10"
                                BorderThickness="0"
                                Background="Transparent"
                                Width="280">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <TextBlock 
                                                Text="{Binding Name}" 
                                                FontSize="15"
                                                FontWeight="SemiBold"
                                                Foreground="#2C3E50"/>
                                            <TextBlock 
                                                Text=" (" 
                                                Foreground="#7F8C8D"
                                                FontSize="14"
                                                Margin="3,0,0,0"/>
                                            <TextBlock 
                                                Text="{Binding Id}" 
                                                Foreground="#7F8C8D"
                                                FontSize="14"/>
                                            <TextBlock 
                                                Text=")" 
                                                Foreground="#7F8C8D"
                                                FontSize="14"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Divider -->
                <Border
                    Height="1"
                    Background="#ECF0F1"
                    Margin="0,10,0,30"/>

                <!-- Sezione Select Adopter -->
                <Label
                    Content="Select Adopter"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    Padding="0"
                    Margin="0,0,0,20"/>

                <!-- Search Adopter e ComboBox -->
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,0,0,20">

                    <!-- Search Box Adopter -->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,0,20,0">
                        <Label
                            Content="Search"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White">
                            <StackPanel Orientation="Horizontal">
                                <Label
                                    Content="🔍"
                                    FontSize="16"
                                    Margin="12,0,8,0"
                                    VerticalAlignment="Center"
                                    Foreground="#7F8C8D"/>
                                <TextBox
                                    Text="Search by name, surname or TIN"
                                    FontSize="16"
                                    Padding="5,10"
                                    BorderThickness="0"
                                    Width="250"
                                    VerticalAlignment="Center"
                                    x:Name="txtSearchAdopter"
                                    GotFocus="RemoveTextAdopter"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- ComboBox Adopter -->
                    <StackPanel Orientation="Vertical">
                        <Label
                            Content="Registered Adopters"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White"
                            Width="280">
                            <ComboBox
                                x:Name="cbAdopters"
                                FontSize="16"
                                Padding="12,10"
                                BorderThickness="0"
                                Background="Transparent"
                                Width="280">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <TextBlock 
                                                Text="{Binding Name}" 
                                                FontSize="15"
                                                FontWeight="SemiBold"
                                                Foreground="#2C3E50"/>
                                            <TextBlock 
                                                Text=" "
                                                FontSize="15"
                                                FontWeight="SemiBold"
                                                Foreground="#2C3E50"/>
                                            <TextBlock 
                                                Text="{Binding Surname}"
                                                FontSize="15"
                                                FontWeight="SemiBold"
                                                Foreground="#2C3E50"/>
                                            <TextBlock 
                                                Text=" (" 
                                                Foreground="#7F8C8D"
                                                FontSize="14"
                                                Margin="3,0,0,0"/>
                                            <TextBlock 
                                                Text="{Binding TIN}" 
                                                Foreground="#7F8C8D"
                                                FontSize="14"/>
                                            <TextBlock 
                                                Text=")" 
                                                Foreground="#7F8C8D"
                                                FontSize="14"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- OR Divider -->
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,20">
                    <Border
                        Height="1"
                        Width="220"
                        Background="#ECF0F1"
                        VerticalAlignment="Center"
                        Margin="0,0,15,0"/>
                    <Label
                        Content="or"
                        FontSize="14"
                        Foreground="#7F8C8D"
                        Padding="0"/>
                    <Border
                        Height="1"
                        Width="220"
                        Background="#ECF0F1"
                        VerticalAlignment="Center"
                        Margin="15,0,0,0"/>
                </StackPanel>

                <!-- Register New Adopter Button -->
                <Button
                    x:Name="btnRegisterAdopter"
                    Content="Register New Adopter"
                    Width="250"
                    Height="45"
                    Margin="0,0,0,30"
                    HorizontalAlignment="Center"
                    Click="btnRegisterAdopter_Click"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Divider -->
                <Border
                    Height="1"
                    Background="#ECF0F1"
                    Margin="0,0,0,30"/>

                <!-- Adopt Cat Button -->
                <Button
                    x:Name="btnAdoptCat"
                    Content="Adopt Cat"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Width="200"
                    Height="50"
                    HorizontalAlignment="Center"
                    Background="#27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnAdoptCat_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect 
                            Color="#27AE60" 
                            Direction="270" 
                            ShadowDepth="2" 
                            BlurRadius="8" 
                            Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>