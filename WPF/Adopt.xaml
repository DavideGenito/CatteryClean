<Window x:Class="WPF.Adopt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Adopt" Height="380" Width="700">
    <StackPanel Orientation="Vertical">
        <Label
            Content="Adopt a Cat"
            FontWeight="Bold"
            FontSize="25"
            HorizontalAlignment="Center"
            Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox
                Text="Search by name or ID"
                Width="150"
                Height="25"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Margin="10"
                x:Name="txtSearchCat"
                GotFocus="RemoveTextCat"/>
            <ComboBox
                x:Name="cbCats"
                Width="200"
                Height="32"
                Margin="10">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text=" (" Foreground="Gray"/>
                            <TextBlock Text="{Binding Id}" Foreground="Gray"/>
                            <TextBlock Text=")" Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <Separator Margin="0,10,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox
                Text="Search by name, surname or TIN"
                Width="200"
                Height="25"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Margin="10"
                x:Name="txtSearchAdopter"
                GotFocus="RemoveTextAdopter"/>
            <ComboBox
                x:Name="cbAdopters"
                Width="270"
                Height="32"
                Margin="10">    
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text=" "/>
                            <TextBlock Text="{Binding Surname}"/>
                            <TextBlock Text=" (" Foreground="Gray"/>
                            <TextBlock Text="{Binding TIN}" Foreground="Gray"/>
                            <TextBlock Text=")" Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate> 
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <Label
            Content="or"
            HorizontalAlignment="Center"/>

        <Button
            x:Name="btnRegisterAdopter"
            Content="Register New Adopter"
            Width="200"
            Height="30"
            Margin="10"
            HorizontalAlignment="Center"
            Click="btnRegisterAdopter_Click"
            Background="DarkCyan"
            Foreground="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <Separator Margin="0,10,0,10"/>

        <Button
            x:Name="btnAdoptCat"
            Content="Adopt Cat"
            Width="150"
            Height="30"
            Margin="10"
            HorizontalAlignment="Center"
            Click="btnAdoptCat_Click"
            Background="PaleGreen">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </StackPanel>
</Window>
