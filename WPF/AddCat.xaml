<Window x:Class="WPF.AddCat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Add Cat" Height="770" Width="650"
        Background="#F5F5F5">
    <StackPanel
        Orientation="Vertical"
        VerticalAlignment="Center"
        Margin="40">

        <!-- Header -->
        <StackPanel 
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,0,0,40">
            <TextBlock
                Text="🐱"
                FontSize="48"
                Margin="0,0,15,0"
                VerticalAlignment="Center"/>
            <StackPanel Orientation="Vertical">
                <Label 
                    Content="Add a New Cat" 
                    FontSize="32" 
                    FontWeight="Bold" 
                    Foreground="#2C3E50"
                    Padding="0"
                    Margin="0,0,0,5"/>
                <Label
                    Content="Fill in the details below"
                    FontSize="14"
                    Foreground="#7F8C8D"
                    Padding="0"
                    Margin="0"/>
            </StackPanel>
        </StackPanel>

        <!-- Form Card -->
        <Border
            Background="White"
            CornerRadius="15"
            Padding="40,35"
            HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect 
                    Color="#CCCCCC" 
                    Direction="270" 
                    ShadowDepth="5" 
                    BlurRadius="15" 
                    Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">

                <!-- Campo Nome -->
                <StackPanel
                    Orientation="Vertical"
                    Margin="0,0,0,20">
                    <Label
                        Content="Name"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#2C3E50"
                        Padding="0"
                        Margin="0,0,0,8"/>
                    <Border
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"
                        CornerRadius="5"
                        Background="White">
                        <TextBox
                            FontSize="16"
                            Padding="12,10"
                            BorderThickness="0"
                            Width="400"
                            x:Name="txtName"/>
                    </Border>
                </StackPanel>

                <!-- Campo Race -->
                <StackPanel
                    Orientation="Vertical"
                    Margin="0,0,0,20">
                    <Label
                        Content="Breed"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#2C3E50"
                        Padding="0"
                        Margin="0,0,0,8"/>
                    <Border
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"
                        CornerRadius="5"
                        Background="White">
                        <TextBox
                            FontSize="16"
                            Padding="12,10"
                            BorderThickness="0"
                            Width="400"
                            x:Name="txtRace"/>
                    </Border>
                </StackPanel>

                <!-- Campo Gender e Birth Date affiancati -->
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,0,0,20">

                    <!-- Gender -->
                    <StackPanel
                        Orientation="Vertical"
                        Margin="0,0,20,0">
                        <Label
                            Content="Gender"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White"
                            Padding="12,10"
                            Width="185">
                            <StackPanel 
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                                <CheckBox
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    x:Name="chkIsMale"/>
                                <TextBlock
                                    Text="Male"
                                    FontSize="16"
                                    Foreground="#34495E"
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Birth Date -->
                    <StackPanel
                        Orientation="Vertical">
                        <Label
                            Content="Birth Date"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#2C3E50"
                            Padding="0"
                            Margin="0,0,0,8"/>
                        <Border
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            CornerRadius="5"
                            Background="White">
                            <DatePicker
                                FontSize="16"
                                Padding="12,10"
                                BorderThickness="0"
                                Width="195"
                                x:Name="dtpBirthDate"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Campo Description -->
                <StackPanel
                    Orientation="Vertical"
                    Margin="0,0,0,25">
                    <Label
                        Content="Description"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#2C3E50"
                        Padding="0"
                        Margin="0,0,0,8"/>
                    <Border
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"
                        CornerRadius="5"
                        Background="White">
                        <TextBox
                            FontSize="16"
                            Padding="12,10"
                            BorderThickness="0"
                            Width="400"
                            Height="80"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                            x:Name="txtDescription"/>
                    </Border>
                </StackPanel>

                <!-- Bottone Add Cat -->
                <Button
                    Content="Add Cat"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Width="200"
                    Height="50"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0"
                    x:Name="btnAddCat"
                    Background="#27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnAddCat_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect 
                            Color="#27AE60" 
                            Direction="270" 
                            ShadowDepth="2" 
                            BlurRadius="8" 
                            Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>