<Window x:Class="WPF.ManageCats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Manage Cats" Height="650" Width="1200"
        Background="#F5F5F5">
    <StackPanel 
        Orientation="Vertical"
        Margin="40,30">

        <!-- Header -->
        <StackPanel 
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,0,0,30">
            <TextBlock
                Text="🐾"
                FontSize="48"
                Margin="0,0,15,0"
                VerticalAlignment="Center"/>
            <StackPanel Orientation="Vertical">
                <Label 
                    Content="Manage Cats" 
                    FontSize="32" 
                    FontWeight="Bold" 
                    Foreground="#2C3E50"
                    Padding="0"
                    Margin="0,0,0,5"/>
                <Label
                    Content="View, edit and manage all cats"
                    FontSize="14"
                    Foreground="#7F8C8D"
                    Padding="0"
                    Margin="0"/>
            </StackPanel>
        </StackPanel>

        <!-- Search Bar -->
        <StackPanel
            Orientation="Vertical"
            HorizontalAlignment="Center"
            Margin="0,0,0,25">
            <Label
                Content="Search"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="#2C3E50"
                Padding="0"
                Margin="0,0,0,8"
                HorizontalAlignment="Left"/>
            <Border
                BorderBrush="#BDC3C7"
                BorderThickness="1"
                CornerRadius="8"
                Background="White"
                Width="400">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Text="🔍"
                        FontSize="18"
                        Margin="15,0,10,0"
                        VerticalAlignment="Center"
                        Foreground="#7F8C8D"/>
                    <TextBox 
                        x:Name="txtSearch" 
                        Text="Search by name"
                        FontSize="16"
                        Padding="5,10"
                        BorderThickness="0"
                        Width="350"
                        VerticalAlignment="Center"
                        GotFocus="RemoveText"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- DataGrid Card -->
        <Border
            Background="White"
            CornerRadius="12"
            Padding="25"
            HorizontalAlignment="Center"
            Margin="0,0,0,25">
            <Border.Effect>
                <DropShadowEffect 
                    Color="#CCCCCC" 
                    Direction="270" 
                    ShadowDepth="5" 
                    BlurRadius="15" 
                    Opacity="0.3"/>
            </Border.Effect>

            <DataGrid 
                x:Name="dgCats" 
                AutoGenerateColumns="False" 
                MaxHeight="350"
                Width="1000"
                HeadersVisibility="Column"
                GridLinesVisibility="None"
                AlternatingRowBackground="#F8F9FA"
                RowBackground="White"
                FontSize="14"
                CanUserAddRows="False"
                SelectionMode="Single"
                BorderThickness="0">

                <DataGrid.Resources>
                    <!-- Stile Header -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#ECF0F1"/>
                        <Setter Property="Foreground" Value="#2C3E50"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>

                    <!-- Stile Celle -->
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    </Style>

                    <!-- Stile Righe -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8F4F8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="100"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True" Width="120"/>
                    <DataGridTextColumn Header="Breed" Binding="{Binding Breed}" IsReadOnly="True" Width="120"/>
                    <DataGridCheckBoxColumn Header="Male" Binding="{Binding IsMale}" IsReadOnly="True" Width="60"/>
                    <DataGridTextColumn Header="Arrival" Binding="{Binding ArrivalDate, StringFormat='{}{0:dd/MM/yy}'}" IsReadOnly="True" Width="90"/>
                    <DataGridTextColumn Header="Adoption" Binding="{Binding AdoptionDate, StringFormat='{}{0:dd/MM/yy}', TargetNullValue='Not adopted'}" IsReadOnly="True" Width="100"/>
                    <DataGridTextColumn Header="Birth Date" Binding="{Binding BirthDate, StringFormat='{}{0:dd/MM/yy}'}" IsReadOnly="True" Width="100"/>

                    <DataGridTemplateColumn Header="Description" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button 
                                    Click="ViewDescription_Click" 
                                    Content="View" 
                                    Margin="0" 
                                    Padding="15,6"
                                    Background="#9B59B6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Cursor="Hand">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Actions" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button 
                                        Click="EditCat_Click" 
                                        Content="Edit" 
                                        Margin="0,0,8,0" 
                                        Padding="15,6"
                                        Width="70"
                                        Background="#3498DB"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button 
                                        Click="DeleteCat_Click" 
                                        Content="Delete" 
                                        Margin="0" 
                                        Padding="15,6"
                                        Width="75"
                                        Background="#E74C3C"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Exit Button -->
        <Button 
            x:Name="btnExit" 
            Content="Exit" 
            Width="150" 
            Height="45" 
            Margin="0" 
            HorizontalAlignment="Center"
            Click="Exit_Click"
            Background="#34495E"
            Foreground="White"
            BorderThickness="0"
            FontSize="16"
            FontWeight="SemiBold"
            Cursor="Hand">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect 
                    Color="#34495E" 
                    Direction="270" 
                    ShadowDepth="2" 
                    BlurRadius="8" 
                    Opacity="0.3"/>
            </Button.Effect>
        </Button>
    </StackPanel>
</Window>