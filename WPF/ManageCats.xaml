<Window x:Class="WPF.ManageCats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="ManageCats" Height="450" Width="800">
    <StackPanel 
        Orientation="Vertical"
        HorizontalAlignment="Center"
        Margin="10">
        <Label
            Content="Ciao bello questa è il manage per i catti"
            FontWeight="Bold"
            FontSize="25"
            />

        <DataGrid x:Name="dgCats" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Breed" Binding="{Binding Breed}" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="IsMale" Binding="{Binding IsMale}" IsReadOnly="True"/>
                <DataGridTextColumn Header="ArrivalDate" Binding="{Binding ArrivalDate}" IsReadOnly="True"/>
                <DataGridTextColumn Header="AdoptionDate" Binding="{Binding AdoptionDate}" IsReadOnly="True"/>
                <DataGridTextColumn Header="BirthDate" Binding="{Binding BirthDate}" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Description">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="ViewDescription" Content="View"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
